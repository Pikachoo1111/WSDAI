# Database Configuration
DATABASE_URL=postgresql://wsdai_user:wsdai_password@localhost:5432/wsdai

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true

# Model Configuration
WHISPER_MODEL=base
SENTIMENT_MODEL=cardiffnlp/twitter-roberta-base-sentiment-latest

# Speech Processing Settings
SAMPLE_RATE=16000
CHUNK_SIZE=1024
SILENCE_THRESHOLD=0.01
MIN_SPEECH_DURATION=0.5

# Video Processing Settings
VIDEO_FPS=30
FACE_DETECTION_CONFIDENCE=0.5
EYE_CONTACT_THRESHOLD=0.7

# Official World Schools Debate Scoring System
# Main speeches: 60-80 points, Reply speeches: 30-40 points
MAIN_SPEECH_MIN_SCORE=60
MAIN_SPEECH_MAX_SCORE=80
REPLY_SPEECH_MIN_SCORE=30
REPLY_SPEECH_MAX_SCORE=40

# Official WSD Criteria Weights
STYLE_WEIGHT=0.4    # Communication, delivery, use of notes (40%)
CONTENT_WEIGHT=0.4  # Argumentation quality (40%)
STRATEGY_WEIGHT=0.2 # Issue prioritization, timing, structure (20%)

# File Upload Settings
MAX_FILE_SIZE=524288000
UPLOAD_DIR=uploads

# Security (generate secure keys for production)
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here

# External APIs (if needed)
OPENAI_API_KEY=your-openai-api-key
GOOGLE_CLOUD_API_KEY=your-google-cloud-api-key
